<h3 class="contact__header">Contact Us</h3>
<form method="post" action="{{ url }}" class="comment-form">
  
  <div class="row">
    <div class="large-8 columns">
      <p class="contact__field"><input class="contact__field--name form__input--box" type="text" placeholder="Name"></p>
    </div>
  </div>
  <div class="row">
    <div class="large-8 columns">
      <p class="contact__field"><input class="contact__field--email form__input--box" type="text" placeholder="Email"></p>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <p class="contact__field"><textarea class="contact__field--message form__input--box" name="message" placeholder="Message"></textarea></p>
    </div>
  </div>
  <p class="contact__button"><input class="contact__button--submit small radius button form__submit" type="submit" value="Send Message"></p>
</form>