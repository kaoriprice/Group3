<div class="page" id="page">
	{{> organisms-header }}
	{{> atoms-hero-image }}
	<div class="main">

		{{# hero }}
			{{> organisms-hero-intro }}
		{{/ hero}}

		{{# why-us }}
			{{> organisms-self-promotion }}
		{{/ why-us }}

		<hr />

		<div class="l-two-col">
			<div class="l-main">
				<section class="section latest-posts">
					<h2 class="section-title">Latest Posts</h2>
					<ul class="post-list">
						{{# latest-posts}}
							<li>{{> molecules-media-block }}</li>
						{{/ latest-posts}}
					</ul>
					<a href="#" class="text-btn">View more posts</a>
				</section>
			</div>

			<div class="l-sidebar">
				{{> organisms-recent-tweets }}
			</div><!--end l-sidebar-->
	</div><!--End .main-->
	{{> organisms-footer }}
</div>